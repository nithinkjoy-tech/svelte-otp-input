{
  "name": "svelte-otp-input",
  "version": "0.1.6",
  "description": "Flexible OTP/verification code input component for Svelte 5+ with full customization, mobile support, 2FA/MFA authentication, and accessibility features",
  "author": {
    "name": "Nithin K Joy",
    "email": "nithinkjoy1@gmail.com",
    "url": "https://nithinkjoy.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nithinkjoy-tech/svelte-otp-input.git"
  },
  "homepage": "https://nithinkjoy.dev/docs/svelte-otp-input/basic-usage",
  "bugs": {
    "url": "https://github.com/nithinkjoy-tech/svelte-otp-input/issues"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "svelte-5",
    "otp",
    "otp-input",
    "verification-code",
    "verification-input",
    "2fa",
    "mfa",
    "two-factor-authentication",
    "multi-factor-authentication",
    "authentication",
    "pin-code",
    "pin-input",
    "one-time-password",
    "svelte-component",
    "sveltekit",
    "security",
    "sms-verification",
    "code-input",
    "form",
    "input",
    "accessible",
    "a11y",
    "mobile-friendly"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "typescript": "^5.3.2",
    "vite": "^7.0.4"
  }
}